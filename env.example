# Database Configuration
DATABASE_URL=mysql://root:password@localhost:3306/movie_ticketing
DB_HOST=localhost
DB_PORT=3306
DB_NAME=movie_ticketing
DB_USER=root
DB_PASSWORD=password

# JWT Configuration
ACCESS_TOKEN_SECRET=your-access-secret-key-here
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-refresh-secret-key-here
REFRESH_TOKEN_EXPIRES_IN=7d

# Server Configuration
PORT=3000
NODE_ENV=development
API_PREFIX=/api/v1
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads

# Swagger Branding & Servers
SWAGGER_TITLE=Movie Ticketing API
SWAGGER_SUBTITLE=Interactive API Documentation
SWAGGER_VERSION=1.0.0
SWAGGER_DESCRIPTION=API documentation for Movie Ticketing System
SWAGGER_LOGO_URL=
SWAGGER_FAVICON_URL=
SWAGGER_PRIMARY_COLOR=#667eea
SWAGGER_SECONDARY_COLOR=#764ba2
SWAGGER_DOC_EXPANSION=list
SWAGGER_TRY_IT_OUT=true
SWAGGER_TAGS_SORTER=alpha
SWAGGER_OPERATIONS_SORTER=method
SWAGGER_SERVER_STAGING_URL=
SWAGGER_SERVER_PROD_URL=

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@movieticketing.com
